@model IEnumerable<Zeus_MVC.Models.Product>

<section id="Products" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 page-header text-center">
                <h2 class="section-heading">Feature Products</h2>
            </div>
        </div>

        <div class="row">
            @{

                foreach (var product in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="hovereffect">
                            <img class="img-responsive center-block" src="~/Product_images/@product.ImageUrl" alt=@product.PrductName />
                            <div class="overlay">
                                <h2> @product.PrductName </h2>
                                <a class="info" href="~/Product/details/@product.Id"> details </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="row">
            <div class="text-center" style="margin-top:4%; margin-bottom:3%;">
                <a href="~/Product/Index" class="btn btn-xl">View All</a>
            </div>
        </div>
    </div>
</section>


