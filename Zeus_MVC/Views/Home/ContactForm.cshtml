@model Zeus_MVC.Models.ContactMessage

<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center" style="margin-bottom:75px;">
                <h2 class="section-heading">Contact Us</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {

                    @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control", @placeholder = "Name *" })
                                <p class="help-block text-danger">
                                    @Html.ValidationMessageFor(m => m.Name)
                                    @*@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })*@
                                </p>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Subject, htmlAttributes: new { @class = "form-control", @placeholder = "Subject *" })
                                <p class="help-block text-danger">
                                    @Html.ValidationMessageFor(m => m.Subject)
                                </p>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Your Email *" })
                                <p class="help-block text-danger">
                                    @Html.ValidationMessageFor(m => m.Email)
                                </p>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-control", @placeholder = "Your Phone *" })
                                <p class="help-block text-danger">
                                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.Message, htmlAttributes: new { @class = "form-control", @placeholder = "Your Message *" })
                                <p class="help-block text-danger">
                                    @Html.ValidationMessageFor(m => m.Message)
                                </p>
                            </div>
                        </div>

                        <div class="clearfix"></div>


                        @Html.AntiForgeryToken()

                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn btn-xl">Submit</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
