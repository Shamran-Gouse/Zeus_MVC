@model Zeus_MVC.Areas.Admin.Models.AdminLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Log In</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Admin Custom CSS -->
    <link href="~/Content/admin.css" rel="stylesheet" />

    <!-- font-awesome css -->
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- jQuery for Bootstrap -->
    <script src="~/Scripts/jquery.js"></script>

    <!-- Bootstrap JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body background="~/img/admin-login.jpg">

    <div class="container">
        <div class="row" style="margin: 10% 0 15% 0;">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Log In</strong>
                    </div> <!--END pannel heading-->
                    <div class="panel-body">

                        @using (Html.BeginForm("AdminLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @style = "margin-top: 7%; margin-bottom: 7%;" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email *" })
                                <p class="help-block text-danger text-center">
                                    @Html.ValidationMessageFor(m => m.Email)
                                </p>
                            </div>

                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password *" })
                                <p class="help-block text-danger text-center">
                                    @Html.ValidationMessageFor(m => m.Password)
                                </p>
                            </div>

                            <div class="form-group text-center">
                                <button class="btn btn-default" type="submit"> Login </button>
                            </div>
                        }




                        @if (TempData["error"] != null)
                        {
                            <div id="Message">
                                <div class="center" style="padding-top: 15px;">
                                    <div class="text-center">
                                        <div class="alert alert-danger">
                                            <strong> @TempData["error"].ToString()</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div> <!--END pannel body-->
                </div> <!--END pannel-->
            </div> <!--END column-->
        </div> <!--END row-->
    </div> <!--END container-->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>
</html>
