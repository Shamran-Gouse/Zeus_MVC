@using Zeus_MVC.Models
@model IEnumerable<Order>

@{
    ViewBag.Title = "Index";
}

<style>
    td a {
        display: block;
    }
</style>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            All Orders
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="~/Admin/Home/Index">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-fw fa-search"></i> All Orders
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="text-center"> ID </th>
                        <th class="text-center"> Client Name </th>
                        <th class="text-center"> Total </th>
                        <th class="text-center"> Date Added </th>
                        <th class="text-center"> Status </th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model)
                    {
                        if (item.Status == OrderStatus.Paid)
                        {
                    <tr class="read">
                        <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.Id</a></td>
                        <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.ApplicationUser.ClientName</a></td>
                        <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.TotalBill</a></td>
                        <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.OrderDate</a></td>
                        <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">PAID</a></td>
                    </tr>
                        }
                        else
                        {
                <tr class="unread">
                    <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.Id</a></td>
                    <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.ApplicationUser.ClientName</a></td>
                    <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.TotalBill</a></td>
                    <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">@item.OrderDate</a></td>
                    <td class="text-center"><a href="~/Admin/Order/Details/@item.Id">NOT PAID</a></td>
                </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->