@model Zeus_MVC.Models.Product

@{
    ViewBag.Title = "Add Products";
}


<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Add Product
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="~/Admin/Home/Index">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-fw fa-plus-square"></i> Add Product
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default" style="margin:4% 0% 5% 6%;">

            <div class="panel-heading">
                <strong> Add Products to Inventry </strong>
            </div> <!--END pannel heading-->

            <div class="panel-body" style="margin:3% 5% 4% 3%;  width:94%">

                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.PrductName)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.PrductName, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Quantity)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.Quantity, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.ReOrder)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.ReOrder, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Price)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.Price, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Description)
                            </div>
                            <div class="col-md-7">
                                @Html.TextAreaFor(p => p.Description, htmlAttributes: new { @class = "form-control", @rows = 5 })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1" style="margin-top:30px;">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Image"> Product Image </label>
                            </div>
                            <div class="col-md-7">
                                <input type="file" name="productimage" id="productimage" required>
                            </div>
                        </div>
                    </div>



                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-4" style="margin-top:5%">
                                <button type="submit" class="btn btn-primary"> Add Product</button>
                            </div>
                        </div>
                    </div>
                }

            </div> <!--END pannel body-->
        </div> <!--END pannel-->
    </div> <!--END column-->
</div>

