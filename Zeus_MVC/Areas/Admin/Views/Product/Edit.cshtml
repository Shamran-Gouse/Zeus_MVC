@model Zeus_MVC.Models.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Edit
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="~/Home/DashBoard">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-fw fa-times"></i> Edit Products
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->




<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default" style="margin:3% 0% 4% 10%;">
            <div class="panel-heading">
                <strong> Edit Products In Inventry </strong>
            </div> <!--END pannel heading-->
            <div class="panel-body" style="margin:3% 5% 4% 3%;  width:94%">
                @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.PrductName)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.PrductName, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Quantity)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.Quantity, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.ReOrder)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.ReOrder, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Price)
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(p => p.Price, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1">
                        <div class="row">
                            <div class="col-md-4">
                                @Html.LabelFor(p => p.Description)
                            </div>
                            <div class="col-md-7">
                                @Html.TextAreaFor(p => p.Description, htmlAttributes: new { @class = "form-control", @rows = 5 })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-offset-1" style="margin-top:30px;">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Image"> Product Image </label>
                            </div>
                            <div class="col-md-7">
                                <img id="previewId" width="200" height="200" src="~/Product_images/@Model.ImageUrl" alt="@Model.PrductName" />
                                <br />
                                <br />
                                <input type="file" name="productimage" id="productimage">
                            </div>
                        </div>
                    </div>

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <br>
                        <br>
                        <div class="row">
                            <div class="text-center">
                                @Html.HiddenFor(p => p.Id)
                                <input type="submit" class="btn btn-primary" name="button" id="button" value="Update Product" />
                            </div>
                        </div>
                    </div>
                }
            </div> <!--END pannel body-->
        </div> <!--END pannel-->
    </div> <!--END column-->
</div>


<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#previewId').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#productimage").change(function () {
        readURL(this);
    });
</script>